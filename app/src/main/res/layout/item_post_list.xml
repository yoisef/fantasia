<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/post_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_250dp"
        android:background="@color/light_gray"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/featured_img"
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_30dp"
        android:layout_alignParentEnd="true"
        android:background="@color/red"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/margin_6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_featured" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_img"
        android:layout_margin="@dimen/margin_15dp"
        android:fontFamily="@font/merriweather"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="This is a test text. Please, don't take it seriously!" />


    <TextView
        android:id="@+id/excerpt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:fontFamily="@font/libre_franklin"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="This is a test text. Please, don't take it seriously!" />

    <RelativeLayout
        android:id="@+id/lyt_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/excerpt_text"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btn_book"
            android:fontFamily="@font/libre_franklin"
            android:paddingEnd="@dimen/margin_2dp"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="22-10-2017" />

        <ImageButton
            android:id="@+id/btn_book"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_toStartOf="@+id/btn_share"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin_6dp"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_un_book" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin_6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_share_post" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/lyt_secondary"
        android:layout_marginBottom="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@color/toolbar_boarder" />

</RelativeLayout>
